<UserControl x:Class="Komissarov.Nsu.OracleClient.Views.Tabs.QueryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:cal="http://www.caliburnproject.org"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80*"></RowDefinition>
            <RowDefinition Height="10*"></RowDefinition>
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="0">
            <TextBox Text="{Binding Query}"/>
        </ScrollViewer>
        <Button Grid.Row="1" Content="Execute" HorizontalAlignment="Right" Width="60" Margin="3" cal:Message.Attach="ExecuteQuery"/>
    </Grid>
</UserControl>
